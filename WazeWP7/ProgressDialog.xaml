<UserControl x:Class="WazeWP7.ProgressDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="113" d:DesignWidth="336">           
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" Height="113" Width="332">
        <TextBlock Height="36" HorizontalAlignment="Left" Margin="17,14,0,0" Name="inputLabel" Text="" VerticalAlignment="Top" Width="303" TextAlignment="Center" />
        <Button Content="OK" Height="59" HorizontalAlignment="Left" Margin="138,54,0,0" Name="okButton" VerticalAlignment="Top" Width="77" FontSize="18" Click="OkButton_Click" />
    </Grid>
</UserControl>
